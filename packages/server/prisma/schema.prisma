// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @unique @default(autoincrement())
  name String @unique

  articleBriefs ArticleBrief[]
  articleDetail ArticleDetail?

  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")

  @@map("users")
}

model ArticleBrief {
  id       String @id @unique @default(uuid())
  title    String
  subTitle String @map("sub_title")
  img      String

  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")

  watchCount   Int @default(0) @map("watch_count")
  commentCount Int @default(0) @map("comment_count")
  favorCount   Int @default(0) @map("favor_count")

  author   User? @relation(fields: [authorId], references: [id])
  authorId Int?

  detailId String?
  detail   ArticleDetail?

  @@map("article_brief")
}

model ArticleDetail {
  id String @id @unique @default(uuid())

  title   String
  content String

  articleBrief ArticleBrief? @relation(fields: [id, title], references: [detailId, title])

  author   User? @relation(fields: [authorId], references: [id])
  authorId Int?  @unique

  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")

  @@map("article_detail")
}
